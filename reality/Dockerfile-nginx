FROM bitnami/nginx

LABEL maintainer "Ian Li <OpenSource@ianli.xyz>"

USER root

RUN apt-get update && apt-get install -y curl nano ca-certificates tzdata && \
    apt-get clean && rm -rf /var/lib/apt/lists /var/cache/apt/archives && \
    curl -O https://raw.githubusercontent.com/tests-always-included/mo/master/mo && \
    mv mo /usr/local/bin && \
    chmod +x /usr/local/bin/mo && \
    curl -sSL https://github.com/techotaku/docker-files/raw/master/reality/nginx.conf.template -o /opt/bitnami/nginx/conf/nginx.conf.template && \
    curl -sSL https://github.com/techotaku/docker-files/raw/master/reality/nginx-configure-and-run.sh -o /app/nginx-configure-and-run.sh && \
    chmod +x /app/nginx-configure-and-run.sh

ENV TZ=Asia/Shanghai

USER 1001

ENTRYPOINT []

CMD [ "/app/nginx-configure-and-run.sh" ]
